@model IEnumerable<Sunshine.Business.Core.Product>

@{
    ViewBag.Title = "产品列表";
    ViewBag.ModuleName = "产品管理";
    ViewBag.SubModuleName = "产品列表";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<p>
    @Html.ActionLink("添加产品", "Create")
</p>
<table>
<thead>
    <tr>
        
    </tr>
</thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductMark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductPriceTypeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductTypeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
            @Html.ActionLink("修改", "Edit", new { id=item.ProductId }) |
            @Html.ActionLink("察看", "Details", new { id=item.ProductId }) |
            @Html.ActionLink("删除", "Delete", new { id=item.ProductId })
        </td>
    </tr>
}

</table>
